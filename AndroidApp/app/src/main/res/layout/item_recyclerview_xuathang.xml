<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_hinhHangHoa4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_tenHangHoa4"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Bộ đồ chơi nam châm kim lọai xếp hình cho bé "
        android:textColor="@color/black"
        android:textSize="@dimen/s20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_hinhHangHoa4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_giaHangHoa4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="239,000"
        android:textColor="@color/xanhnen"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="x"
        android:textColor="#108322"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/textView_giaHangHoa4"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4" />


    <EditText
        android:id="@+id/edittext_soluong4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="@dimen/s15dp"
        android:paddingRight="@dimen/s15dp"
        android:text="0"
        android:textColor="@color/xanhnen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4" />

    <ImageButton
        android:id="@+id/imageView_add4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_add"
        app:layout_constraintStart_toEndOf="@+id/imageView_remove4"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4" />

    <ImageButton
        android:id="@+id/imageView_remove4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_remove"
        app:layout_constraintStart_toEndOf="@+id/edittext_soluong4"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa4" />
</androidx.constraintlayout.widget.ConstraintLayout>