<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_anhdaidien20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_tenHangHoa20"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Bộ đồ chơi nam châm kim lọai xếp hình cho bé "
        android:textColor="@color/black"
        android:textSize="@dimen/s20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_anhdaidien20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_tonKho20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="10dp"
        android:text="20"
        android:textAllCaps="true"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_anhdaidien20"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa20" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:text="Tồn kho:"
        app:layout_constraintStart_toEndOf="@+id/imageView_anhdaidien20"
        app:layout_constraintTop_toBottomOf="@+id/textView_tenHangHoa20" />


</androidx.constraintlayout.widget.ConstraintLayout>