<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/s15dp"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_chonHangXuat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_chonlai"
            style="@style/btn_chonlai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/s15dp"
            android:paddingBottom="@dimen/s15dp"
            android:text="Chọn lại"
            android:textAllCaps="false"
            android:textSize="@dimen/s20sp"
            android:background="@drawable/gradient_1"/>

        <Button
            android:id="@+id/button_xong"
            style="@style/btn_xong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradient_1"
            android:paddingTop="@dimen/s15dp"
            android:paddingBottom="@dimen/s15dp"
            android:text="Xong"
            android:textAllCaps="false"
            android:textSize="@dimen/s20sp" />
    </LinearLayout>

</LinearLayout>
